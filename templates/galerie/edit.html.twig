{% extends 'base.html.twig' %}

{% block title %}Modifier la galerie{% endblock %}

{% block body %}
<div class="container mt-5" style="max-width: 800px;">
    <h1 class="mb-4 text-center">Modifier la galerie n°{{ galerie.id }}</h1>

    <div class="card shadow-sm p-4">
        {{ form_start(form) }}

        <div class="mb-3">
            {{ form_label(form.description) }}
            {{ form_widget(form.description) }}
        </div>

        <div class="form-check mb-4">
            {{ form_widget(form.publiee) }}
            {{ form_label(form.publiee, null, { 'label_attr': {'class': 'form-check-label'} }) }}
        </div>

        <h5 class="mb-2">Voitures de la galerie :</h5>
        <div class="mb-3">
            {{ form_widget(form.voitures) }}
        </div>

        <button class="btn btn-primary w-100">✔️ Enregistrer les modifications</button>

        {{ form_end(form) }}
    </div>

    <a href="{{ path('app_galerie_mine') }}" class="btn btn-secondary mt-4 w-100">
        ← Retour à mes galeries
    </a>
</div>
{% endblock %}
