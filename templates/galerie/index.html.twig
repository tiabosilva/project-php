{% extends 'base.html.twig' %}

{% block title %}Galeries publiques{% endblock %}

{% block body %}
<div class="container mt-4">

    <h1 class="mb-4">Galeries</h1>

    <div class="d-flex justify-content-between mb-3">
        <a href="{{ path('app_galerie_new') }}" class="btn btn-primary">Créer une nouvelle galerie</a>
    </div>

    {% if galeries is empty %}
        <div class="alert alert-info">
            Aucune galerie disponible.
        </div>
    {% else %}

        <div class="row row-cols-1 row-cols-md-2 g-4">

        {% for galerie in galeries %}
            <div class="col">
                <div class="card shadow-sm">

                    <div class="card-body">

                        <!-- Title -->
                        <h5 class="card-title">{{ galerie.description }}</h5>

                        <!-- Creator (NULL-safe) -->
                        <p class="card-text small">
                            <strong>Créée par :</strong>
                            {% if galerie.createur %}
                                {{ galerie.createur.email }}
                            {% else %}
                                <span class="text-muted">Inconnu</span>
                            {% endif %}
                        </p>

                        <!-- Published or not -->
                        {% if galerie.publiee %}
                            <span class="badge bg-success mb-2">Publique</span>
                        {% else %}
                            <span class="badge bg-secondary mb-2">Privée</span>
                        {% endif %}

                        <br>

                        <!-- Buttons -->
                        <a href="{{ path('app_galerie_show', {id: galerie.id}) }}" class="btn btn-outline-primary btn-sm mt-2">Voir</a>

                        {% if is_granted('ROLE_ADMIN') or app.user == galerie.createur %}
                            <a href="{{ path('app_galerie_edit', {id: galerie.id}) }}" class="btn btn-outline-warning btn-sm mt-2">Modifier</a>
                        {% endif %}

                    </div>
                </div>
            </div>
        {% endfor %}

        </div>

    {% endif %}

</div>
{% endblock %}
