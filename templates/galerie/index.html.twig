{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<div class="container mt-5" style="max-width: 900px;">

    <h1 class="mb-4 text-center">{{ title }}</h1>

    {% if app.user %}
        <a href="{{ path('app_galerie_new') }}" class="btn btn-success mb-4">
            + Créer une nouvelle galerie
        </a>
    {% endif %}

    <div class="row">
        {% for galerie in galeries %}
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm p-3">

                    <h5>Galerie n°{{ galerie.id }}</h5>

                    <p>
                        <strong>Description :</strong><br>
                        {{ galerie.description ?: 'Aucune description' }}
                    </p>

                    <p>
                        {% if galerie.publiee %}
                            <span class="badge bg-success">Publique</span>
                        {% else %}
                            <span class="badge bg-secondary">Privée</span>
                        {% endif %}
                    </p>

                    <p>
                        <strong>Voitures :</strong><br>
                        {% for v in galerie.voitures %}
                            • {{ v.marque }} {{ v.modele }} ({{ v.annee }})<br>
                        {% else %}
                            Aucune voiture dans cette galerie.
                        {% endfor %}
                    </p>

                    <a href="{{ path('app_galerie_show', {id: galerie.id}) }}" class="btn btn-outline-primary btn-sm mt-2">
    					Voir
					</a>

                    {% if app.user and (is_granted('ROLE_ADMIN') or app.user == galerie.createur) %}
                        <a href="{{ path('app_galerie_edit', {id: galerie.id}) }}" class="btn btn-outline-warning btn-sm mt-2 ms-2">
                            Modifier
                        </a>
                    {% endif %}
                    

                </div>
            </div>
        {% else %}
            <p class="text-center mt-4">Aucune galerie trouvée.</p>
        {% endfor %}
    </div>

</div>
{% endblock %}
