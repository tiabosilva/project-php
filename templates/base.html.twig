<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>{% block title %}Welcome!{% endblock %}</title>

    <!-- Favicon -->
    <link rel="icon"
      href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

    {% block stylesheets %}
      <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
      <link href="{{ asset('css/styles.css') }}" rel="stylesheet">
    {% endblock %}
  </head>

  <body>
    {% block menu %}
      <!-- Navigation -->
      <nav class="navbar navbar-expand-lg navbar-light bg-light px-3">
        <a class="navbar-brand" href="/">MyCars</a>

        <div class="collapse navbar-collapse">
          <ul class="navbar-nav me-auto">

            {% if app.user %}

                {% if is_granted('ROLE_ADMIN') %}
                    <!-- ADMIN NAV -->
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin') }}">Administration</a>
                    </li>

                {% else %}
                    <!-- AUTHENTICATED NORMAL USER NAV -->
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('collection_voitures_list') }}">Ma collection</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_galerie_mine') }}">Mes galeries</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_galerie_public') }}">Galeries publiques</a>
                    </li>
                {% endif %}

            {% else %}
                <!-- NOT AUTHENTICATED NAV -->
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_galerie_public') }}">Galeries publiques</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_login') }}">Collections</a>
                </li>
            {% endif %}

          </ul>

          <!-- RIGHT SIDE NAV -->
          <ul class="navbar-nav">

            {% if app.user %}
                <li class="nav-item">
                    <a class="nav-link text-danger" href="{{ path('app_logout') }}">Logout</a>
                </li>

            {% else %}
                <li class="nav-item">
                    <a class="nav-link text-primary" href="{{ path('app_login') }}">Login</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-success" href="{{ path('app_register') }}">Register</a>
                </li>
            {% endif %}

          </ul>
        </div>
      </nav>
      
    {% endblock %}

    {% block body %}{% endblock %}

    {% block javascripts %}
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
      <script src="{{ asset('js/scripts.js') }}"></script>
    {% endblock %}
  </body>
</html>
