{% extends 'base.html.twig' %}

{% block title %}Modifier la voiture{% endblock %}

{% block body %}
<div class="container mt-5" style="max-width: 700px;">
    <div class="card shadow-lg border-0">

        <div class="card-header bg-primary text-white text-center py-3">
            <h2 class="mb-0">Modifier la voiture</h2>
        </div>

        <div class="card-body p-4">

            {{ form_start(form) }}

            <div class="mb-3">
                {{ form_label(form.modele, 'Mod√®le') }}
                {{ form_widget(form.modele, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.marque, 'Marque') }}
                {{ form_widget(form.marque, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.annee, 'Ann√©e') }}
                {{ form_widget(form.annee, {'attr': {'class': 'form-control'}}) }}
            </div>

            {# üî• field for galerie association #}
            <div class="mb-3">
                {{ form_label(form.galeries, 'Galeries associ√©es') }}
                {{ form_widget(form.galeries, {'attr': {'class': 'form-select', 'style': 'height: 150px'}}) }}
            </div>

            <div class="d-flex justify-content-between mt-4">

                {# üî• NORMAL USER BACK TO GALERIE #}
                {% if app.user and not is_granted('ROLE_ADMIN') %}
                    {% if voiture.galeries|length > 0 %}
                        {% set g = voiture.galeries|first %}
                        <a href="{{ path('app_galerie_show', { id: g.id }) }}"
                           class="btn btn-outline-secondary">
                            ‚Üê Retour √† la galerie
                        </a>
                    {% endif %}
                {% endif %}

                {# üî• ADMIN BACK TO VOITURES LIST #}
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_voiture_index') }}"
                       class="btn btn-outline-secondary">
                        ‚Üê Retour √† la liste
                    </a>
                {% endif %}

                <button class="btn btn-primary">Mettre √† jour</button>

            </div>

            {{ form_end(form) }}

            {% if is_granted('ROLE_ADMIN') %}
                <div class="mt-3">
                    {{ include('voiture/_delete_form.html.twig') }}
                </div>
            {% endif %}

        </div>
    </div>
</div>
{% endblock %}
